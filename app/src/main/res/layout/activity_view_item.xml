<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin"
    tools:context=".ViewItemActivity">

    <TextView
        android:id="@+id/tvJournalDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Date Text View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvJournalEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tvJournalDate"
        android:maxLines="20"
        android:scrollbars = "vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvJournalDate"
        tools:text=" A very long description of the journal entry" />
</android.support.constraint.ConstraintLayout>
</layout>